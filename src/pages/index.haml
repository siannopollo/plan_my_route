#planning
  %form{:action => '/', :method => 'get'}
    .start
      .set= text_field :starting_address, '', :placeholder => 'Starting Address'
    .addresses
      - 4.times do |i|
        .set>= partial 'address_field', :locals => {:index => i + 1}
    .buttons
      %button{:type => :submit} Plan My Route
      .spinner.hide
    .actions
      %input#optimize{:type => 'checkbox', :checked => 'checked'}
      %label{:for => 'optimize'} Optimize my route
  #print.hide
    %button.print_text Print text only
    %button.print_all Print text + map
  
  #google_map.hide
    .wrapper
      .map
    .driving_directions

:javascript
  window.route = new PlanMyRoute.Route($('planning'));
